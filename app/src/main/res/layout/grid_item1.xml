<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"


        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0.01dp">


        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout

                android:id="@+id/top_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/minus_id"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/minus32"
                   />


            </LinearLayout>


            <LinearLayout

                android:id="@+id/top_layout1"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/img_thumbnail"
                    android:layout_width="160dp"
                    android:layout_height="160dp" />

                <TextView

                    android:id="@+id/tv_species"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    />


            </LinearLayout>


            <LinearLayout


                android:id="@+id/top_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">


                <Button

                    android:id="@+id/plus_id"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/plus32"
                     />


            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/addtocart_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginBottom="0dp"
                    android:background="#ffffff"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/cart" />


            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>